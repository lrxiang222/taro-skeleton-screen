{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "target": "es2017",
        "module": "esnext",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "resolveJsonModule": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules/*",
        "dist/*"
    ]
}